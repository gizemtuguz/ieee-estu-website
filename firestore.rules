rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }
    
    // Public read for published content
    match /events/{eventId} {
      allow read: if resource.data.status == 'published' || isAdmin();
      allow write: if isAdmin();
    }
    
    match /posts/{postId} {
      allow read: if resource.data.status == 'published' || isAdmin();
      allow write: if isAdmin();
    }
    
    match /site_pages/{pageKey} {
      allow read: if resource.data.status == 'published' || isAdmin();
      allow write: if isAdmin();
    }
    
    match /media/{mediaId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Newsletter collection - allow anyone to subscribe
    match /newsletter/{subscriberId} {
      allow read: if isAdmin();
      allow create: if request.resource.data.email is string && 
                       request.resource.data.email.matches('.*@.*\\..*') &&
                       request.resource.data.subscribedAt is string &&
                       request.resource.data.locale is string;
      allow update, delete: if isAdmin();
    }
    
    // Admin users collection
    match /admins/{email} {
      allow read: if request.auth != null;
      allow write: if false; // Managed server-side only
    }
  }
}
